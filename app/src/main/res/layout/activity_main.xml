<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonPassInteger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/passInt" />

    <Button
        android:id="@+id/buttonPassCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/passChar" />

    <TextView
        android:id="@+id/textViewClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:onClick="perform_action"
        android:text="@string/passDble"
        tools:ignore="OnClick,TouchTargetSizeCheck,TouchTargetSizeCheck" />
</LinearLayout>